<%= form_for @rental do |f| %>

<%= f.hidden_field :user_id, value: current_user.id %>

<div class="form-group">

<% if @rental.errors.any? %>
<div id="error_explanation">
<h2> <%= pluralize(@rental.errors.count, "error") %> did not allow this rental to be saved: </h2>
<ul>
<% @rental.errors.full_messages.each do |message| %>
<li> <%= message %> </li>
<% end %>
</ul>
</div>
<% end %>

<div class="field">
<%= f.label :street_address %><br>
<%= f.text_field :street_add, class: "form-control", placeholder: "Street Address" %>
</div>

<div class="field">
<%= f.label :city %><br>
<%= f.text_area :city, class: "form-control", placeholder: "City" %>
</div>

<div class="field">
<%= f.label :state %><br>
<%= f.text_field :state, class: "form-control", placeholder: "State" %>
</div>

<div class="field">
<%= f.label :owner %><br>
<%= f.text_field :owner, class: "form-control", placeholder: "Owner" %>
</div>

<div class="actions">
<%= f.submit %>
</div>
<% end %>


